<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  tools:context=".ui.shareRombongan.sharerombongandua"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <com.mapbox.mapboxsdk.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/mapboxfamily"
        mapbox:mapbox_cameraTargetLat="-7.818834"
        mapbox:mapbox_cameraTargetLng="112.526830"
        mapbox:mapbox_cameraZoom="12"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="keluar"
        android:id="@+id/keluarshare"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Lihat User"
        android:id="@+id/viewuser"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/keluarshare"
        android:layout_marginLeft="20dp"
        />



</RelativeLayout>