<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shareRombongan.ShareRombongan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Masukkan Kode rombongan kamu"
        android:id="@+id/sharingkode"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        />

    <com.goodiebag.pinview.Pinview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sharingkode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:pinLength="6"
        app:pinWidth="40dp"
        app:pinHeight="60dp"
        app:inputType="number"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        android:id="@+id/pinsharing"
        >
    </com.goodiebag.pinview.Pinview>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/sharingbuton"
        android:layout_below="@+id/pinsharing"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:text="Enter"
        />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sharingbuton"
        android:text="SCAN QODE"
        android:layout_below="@id/pinsharing"
        android:layout_marginTop="50dp"
        android:id="@+id/scan"
        />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GENERATE KODE"
        android:layout_below="@id/sharingbuton"
        android:layout_marginTop="20dp"
        android:id="@+id/generate"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qrcode"
        android:layout_below="@id/generate"
        />




</RelativeLayout>